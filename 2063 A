#include <iostream>
#include <vector>
#include <numeric>
using namespace std;
 
 
 
int main() {
    int t;
    cin >> t;
 
    vector<int> results;
 
    while (t--) 
    {
        int a,b;
        cin>>a>>b;
 
        if(a==1 && b==1)
        {
            cout<<1<<endl;
            continue;
        }
 
        cout<<b-a<<endl;
 
    }
 
    return 0;
}
