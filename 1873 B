#include <bits/stdc++.h>
using namespace std;
#define ll long long 
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        ll count=1;
        vector<int> arr(n);
        for(int i=0;i<n;i++){
            cin>>arr[i];
        }
        sort(arr.begin(),arr.  end());
        arr[0]+=1;
        for(int i = 0;i<n;i++){
            // arr[0]+=1;
            // cout<<arr[i]<<" ";
            count*=arr[i];
        }
        cout<<count<<endl;
    }
return 0;
}
